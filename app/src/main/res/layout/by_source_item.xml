<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/by_letter_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/base_radius"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/sex_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_boy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_base"
            android:maxLines="2"
            android:text="Лейсан (Ляйсан)"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/sex_img"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_base"
            android:maxLines="2"
            android:text="Старославянские"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/sex_img"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_base"
            android:text="Поскольку с происхождением не все так однозначно, значений тоже несколько: “дающая силы”, “большой город”, “удачливая”"
            android:textSize="20sp"
            android:paddingRight="50dp"
            app:layout_constraintStart_toEndOf="@+id/sex_img"
            app:layout_constraintTop_toBottomOf="@+id/source"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
